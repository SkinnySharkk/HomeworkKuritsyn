<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manualgetloan.ManualFragment">

    <Button
        android:id="@+id/toBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как получить в банке?"
        app:layout_constraintBottom_toTopOf="@+id/toCardBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toCardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как оформить на карту?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toBank" />
</androidx.constraintlayout.widget.ConstraintLayout>