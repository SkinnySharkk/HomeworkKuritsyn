<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manualgetloan.ManualFragment">

    <Button
        android:id="@+id/toBankBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual_to_bank_btn"
        app:layout_constraintBottom_toTopOf="@+id/toCardBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toCardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual_to_card_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toBankBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>